{
  "name": "upscale-4k",
  "short_name": "upscale-4k",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Upscale HTML5 video",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["http://*/*", "https://*/*"],
      "match_about_blank": true,
      "js": ["bundle.js"]
    }
  ]
}
